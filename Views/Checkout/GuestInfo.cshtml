@model HandMadeCakes.Models.Order

@{
    ViewData["Title"] = "Guest Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Guest Checkout</h2>
    <p class="text-center text-muted mb-5">Please provide your details to complete the order.</p>

    <form asp-action="GuestInfo" method="post" class="w-50 mx-auto">
        <div class="mb-3">
            <label asp-for="FullName" class="form-label">Full Name</label>
            <input asp-for="FullName" class="form-control" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phone" class="form-label">Phone</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">Shipping Address</label>
            <textarea asp-for="Address" class="form-control"></textarea>
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary btn-lg w-100">Continue to Payment</button>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
