@model List<HandMadeCakes.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
    var subtotal = Model.Sum(item => item.Price * item.Quantity);
    var shipping = 10.0; // Fixed shipping
    var total = subtotal + shipping;
}

<div class="container mt-5">
    <h2 class="mb-4">Your Shopping Cart</h2>
    <div class="row">
        <!-- Cart Items -->
        <div class="col-md-8">
            @if (Model.Count == 0)
            {
                <div class="alert alert-info">
                    Your cart is empty.
                </div>
            }
            else
            {
                <div class="list-group mb-4">
                    @foreach (var item in Model)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">@item.Flavor</h5>
                                <small>Quantity: @item.Quantity</small>
                            </div>
                            <div>
                                <p class="mb-0 fw-bold">@((item.Price * item.Quantity).ToString("C"))</p>
                                <a asp-controller="Cart" asp-action="Remove" asp-route-id="@item.CakeId" class="btn btn-sm btn-outline-danger ms-2">
                                    <i class="bi bi-trash"></i> Remove
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Continue Shopping
            </a>
        </div>

        <!-- Summary -->
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <div class="d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span>@subtotal.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Shipping:</span>
                        <span>@shipping.ToString("C")</span>
                    </div>
                    <hr />
                    <div class="d-flex justify-content-between fw-bold">
                        <span>Total:</span>
                        <span>@total.ToString("C")</span>
                    </div>
                    <form method="post" asp-controller="Cart" asp-action="ProceedToCheckout">
                        <button type="submit" class="btn btn-primary btn-lg">
                            Proceed to Checkout
                        </button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
